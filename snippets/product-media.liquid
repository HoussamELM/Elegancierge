{% case media.media_type %}
  {% when 'image' %}
  <img
    class="w-full object-cover h-80"
    src="{{ media | img_url: 'master' }}"
    alt="{{ media.preview_image.alt }}">
  {% when 'external_video' %}
  {{ media | external_video_tag: 'w-full h-80 object-cover' }}
  {% when 'video' %}
  {{ media | video_tag: controls: true, class: 'w-full h-80 object-cover' }}
  {% when 'model' %}
  {{ media | model_viewer_tag }}
{% else %}
  {{ media | media_tag }}
{% endcase %}