<div class="flex flex-col items-center my-8">
  <h1 class="text-center text-3xl">{{ section.settings.title }}</h1>
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      {% for product in section.settings.featured_collection.products limit: section.settings.number_of_products_to_show %}
        {% render 'product-card', product: product, show_vendor: section.settings.show_vendor, show_price: section.settings.show_price, show_product_title: section.settings.show_product_title, image_animation: section.settings.image_animation, image_animation_speed: section.settings.image_animation_speed %}
      {% else %}
        {% for item in (1..4) %}
          {% render 'product-card-placeholder' %}
        {% endfor %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Featured Collection",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Featured Collection"
      },
      {
        "type": "collection",
        "id": "featured_collection",
        "label": "Featured Collection"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "default": true,
        "label": "Show vendor"
      },
      {
        "type": "checkbox",
        "id": "show_price",
        "default": true,
        "label": "Show price"
      }, {
        "type": "checkbox",
        "id": "show_product_title",
        "default": true,
        "label": "Show product title"
      }, {
        "type": "checkbox",
        "id": "image_animation",
        "default": true,
        "label": "Image animation on hover"
      }, {
        "type": "range",
        "id": "image_animation_speed",
        "default": 0.5,
        "min": 0.1,
        "max": 1,
        "step": 0.1,
        "label": "Image animation speed in ms"
      }, {
        "type": "range",
        "id": "number_of_products_to_show",
        "default": 4,
        "min": 1,
        "max": 12,
        "step": 1,
        "label": "Number of products to show"
      }
    ],
    "presets": [
      {
        "name": "featured-collection"
      }
    ]
  }
{% endschema %}